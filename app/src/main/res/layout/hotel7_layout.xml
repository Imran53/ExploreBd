<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:id="@+id/container">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:src="@drawable/agrabad"
                android:id="@+id/myImageViewId7"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:padding="4dp" />


            <TextView
                android:id="@+id/titleTextViewId777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/myImageViewId7"
                android:text="Hotel Cox"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src ="@drawable/placeholder"
                    android:id="@+id/imageTumi7"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#4A6ACA"
                    android:id="@+id/tumi7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cox's Bazar, Chittagong"
                    android:layout_toEndOf="@+id/imageTumi7"
                    android:layout_toRightOf="@+id/imageTumi7"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>









            <TextView
                android:paddingTop="2.5dp"
                android:id="@+id/titleTextViewId7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTextViewId777"
                android:layout_marginLeft="5dp"
                android:lineSpacingExtra="6dp"
                android:textColor="#413B3B"
                android:textSize="15sp"
                android:text="Full details of hotel"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />


            <TextView
                android:id="@+id/descriptionTextViewId7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTextViewId7"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="hotel booking site name"
                android:lineSpacingExtra="6dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />




            <TextView
                android:lineSpacingExtra="6dp"
                android:id="@+id/titleTextViewId77"
                android:textColor="#413838"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionTextViewId7"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="#AFB7DF"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Facility of Cox hotel"
                android:linksClickable="true"
                android:autoLink="phone"
                android:textColorLink="#FC1268"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
