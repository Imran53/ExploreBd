<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileCoxActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.smarteist.autoimageslider.SliderLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageSlider5"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginStart="18dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src ="@drawable/locationn"
                        android:id="@+id/imageTumi1"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:paddingLeft="5dp"
                        android:textSize="13.6sp"
                        android:textColor="#4A6ACA"
                        android:id="@+id/tumi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বগুড়া শহর থেকে প্রায় ১২ কি.মি. উত্তরে করতোয়া নদীর তীরে অবস্থিত"
                        android:layout_toEndOf="@+id/imageTumi1"
                        android:layout_toRightOf="@+id/imageTumi1"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <TextView

                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#ffff"
                    android:lineSpacingExtra="5dp"
                    android:padding="20dp"
                    android:text="মহাস্থানগড় বাংলাদেশের একটি অন্যতম প্রাচীন পুরাকীর্তি। পূর্বে এর নাম ছিল পুণ্ড্রবর্ধন বা পুণ্ড্রনগর। বগুড়া শহর থেকে প্রায় ১২ কিলোমিটার উত্তরে করতোয়া নদীর তীরে অবস্থিত এ জায়গাটি। প্রায় আড়াই হাজার বছর আগের এক দুর্গ নগরী এই মহাস্থানগড়। এককালে, মৌর্য, গুপ্ত, পাল ও সেন রাজাদের রাজধানী ছিল এখানে। এখন শুধু সেগুলোর ধ্বংসাবশেষ নীরবে দাঁড়িয়ে আছে ইতিহাসের নীরব সাক্ষী হয়ে। "
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />

                <TextView

                    android:background="@drawable/rounded_border"
                    android:id="@+id/textView22222111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="বগুড়া বাংলাদেশের উত্তরবঙ্গের বগুড়া জেলার একটি শিল্প ও বাণিজ্যিক শহর। এটি রাজশাহী বিভাগ-এর অন্তর্গত। বগুড়া দইয়ের জন্য খুব বিখ্যাত। বগুড়া শহরে থেকে ১১ কিঃমিঃ উত্তরে মহাস্থানগড় অবস্থিত, যা একসময় প্রাচীন বাংলার রাজধানী ছিল এবং সেসময় পুণ্ড্রনগর নামে পরিচিত ছিল।(সূত্রঃ উইকিপিডিয়া)"
                    android:textColor="#413B3B"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />


                <TextView

                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="যেভাবে যাবেন :"
                    android:textColor="#0C0B0B"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />




                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:lineSpacingExtra="6dp"
                    android:padding="20dp"
                    android:text="ঢাকা থেকে প্রায় ২১৪ কিলোমিটার দূরে বগুড়া অবস্থিত। আপনি সেখানে বাস এবং ট্রেনে পৌছাতে পারেন। ঢাকা থেকে বগুড়া যাওয়ার জন্য গাবতলী আর মহাখালী বাস টার্মিনাল থেকে এসআর ট্রাভেলস, শ্যামলী পরিবহন, শাহ ফতেহ আলী পরিবহন, এস এ  পরিবহন, হানিফ ইন্টারপ্রাইজ  ইত্যাদি পরিবহনের বাস পাওয়া যায়। ট্রেনে যেতে চাইলে রাজধানী থেকে রংপুর এক্সপ্রেস ও লালমনি এক্সপ্রেস নিয়মিত বগুড়া থেকে যাওয়া আসা করে। "
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />

                <Button

                    android:id="@+id/textView222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:background="#F2F1F3"
                    android:text="অনলাইনে -\nট্রেনের টিকেট : www.esheba.cnsbd.com"
                    android:textColorLink="#7E90F0"
                    android:textColor="#0C0B0B"
                    android:textSize="16.5sp"
                    android:lineSpacingExtra="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="থাকবেন কোথায় :"
                    android:textColor="#0C0B0B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:lineSpacingExtra="6dp"
                    android:padding="20dp"
                    android:text="এখানকার জনপ্রিয় সব পর্যটন হোটেলের বিস্তারিত তথ্য জানতে আপনি আমাদের পর্যটন হোটেল ক্যাটাগরি চেক করতে পারেন।"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />


                <TextView

                    android:id="@+id/textView2222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="মহাস্থানগড় ভ্রমণে দর্শনীয় স্থান :"
                    android:textColor="#0C0B0B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView555"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:lineSpacingExtra="6dp"
                    android:padding="20dp"
                    android:text="* পরশুরাম প্যালেস\n* মহাস্থান জাদুঘর\n* গোবিন্দ ভিটা\n* বৈরাগীর ভিটা"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />

                <TextView

                    android:id="@+id/textView2221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="20dp"
                    android:linksClickable="true"
                    android:autoLink="phone"
                    android:background="#D5D8EE"
                    android:text="এছাড়া যেকোন সমস্যায় ট্যুরিষ্ট পুলিশের সাহায্য নিন। ট্যুরিষ্ট পুলিশের হটলাইন নাম্বার - ০১৭৬৯৬৯০৭৪০"
                    android:textColorLink="#2B49E7"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp"
                    android:lineSpacingExtra="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5555" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>