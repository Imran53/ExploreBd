<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:src="@drawable/roskodom"
                android:id="@+id/myImageViewId9"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:padding="4dp" />


            <TextView
                android:id="@+id/titleTextViewId999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/myImageViewId9"
                android:text="INR 56990"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src ="@drawable/locationn"
                    android:id="@+id/imageTumi9"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:paddingLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#E78C22"
                    android:id="@+id/tumi9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I want to go to chitta"
                    android:layout_toEndOf="@+id/imageTumi9"
                    android:layout_toRightOf="@+id/imageTumi9"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>








            <TextView
                android:id="@+id/titleTextViewId9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTextViewId999"
                android:layout_marginLeft="5dp"
                android:lineSpacingExtra="6dp"
                android:textColor="#413B3B"
                android:textSize="15sp"
                android:text="Apple MacBook Air Core i5 5th Gen - (8 GB/128 GB SSD/Mac OS Sierra)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                 />

            <TextView
                android:id="@+id/descriptionTextViewId9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTextViewId9"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="13.3 Inch, 256 GB"
                android:lineSpacingExtra="6dp"
                android:textColorLink="#7E90F0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />




            <TextView
                android:id="@+id/titleTextViewId99"
                android:textColor="#413838"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionTextViewId9"
                android:layout_marginLeft="5dp"
                android:lineSpacingExtra="6dp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:textColorLink="#CA0D51"
                android:layout_marginTop="5dp"
                android:background="#AFB7DF"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Miami Hotel"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
