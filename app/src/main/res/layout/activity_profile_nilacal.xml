<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileCoxActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.smarteist.autoimageslider.SliderLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageSlider4"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginStart="18dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src ="@drawable/locationn"
                        android:id="@+id/imageTumi1"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:paddingLeft="5dp"
                        android:textSize="13.6sp"
                        android:textColor="#4A6ACA"
                        android:id="@+id/tumi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="বান্দরবান শহর থেকে নীলাচলের দূরত্ব প্রায় ৪.৯ কি.মি."
                        android:layout_toEndOf="@+id/imageTumi1"
                        android:layout_toRightOf="@+id/imageTumi1"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <TextView

                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:background="#ffff"
                    android:lineSpacingExtra="5dp"
                    android:padding="20dp"
                    android:text="সমুদ্রপৃষ্ঠ থেকে প্রায় দুই হাজার ফুট উচ্চতায় এবং বান্দরবন জেলা শহর থেকে মাত্র চার কিলোমিটার দূরে টাইগার পাড়া এলাকায় অবস্থিত অপরূপ সৌন্দর্যের লীলাভূমি নীলাচল। এই জায়গায় বর্ষা, শরৎ কি হেমন্ত — তিন ঋতুতে ছোঁয়া যায় মেঘ। এছাড়া এখানে দাঁড়িয়ে দূর থেকে দেখা যায় বান্দরবান শহর আর পাশ দিয়ে বয়ে যাওয়া সাঙ্গু নদী।\n\nমেঘমুক্ত আকাশে কক্সবাজার সমুদ্রসৈকতের অপুর্ব দৃশ্য এখান থেকেই পর্যটকেরা উপভোগ করতে পারেন। নীলাচলে বাড়তি আকর্ষণ যোগ করেছে এখানকার নীল রং এর  নীলাচল স্কেপ রিসোর্ট। সাধারণ পর্যটকদের জন্য এ জায়গায় সূর্যাস্ত পর্যন্ত অনুমতি আছে। তবে রিসোর্টের অতিথিদের জন্য সর্বক্ষণই খোলা এ জায়গা।"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />

                <TextView

                    android:background="@drawable/rounded_border"
                    android:id="@+id/textView22222111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="বান্দরবান জেলা বাংলাদেশের দক্ষিণ-পূর্বাঞ্চলে অবস্থিত চট্টগ্রাম বিভাগের একটি প্রশাসনিক অঞ্চল। এটি একটি পার্বত্য জেলা। বান্দরবান জেলা বাংলাদেশের সবচেয়ে কম জনবসতিপূর্ণ জেলা। জনসংখ্যার ঘনত্ব প্রতি বর্গ কিলোমিটারে প্রায় ৮৭ জন।(সূত্রঃ উইকিপিডিয়া)"
                    android:textColor="#413B3B"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />


                <TextView

                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="যেভাবে যাবেন :"
                    android:textColor="#0C0B0B"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />




                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:lineSpacingExtra="6dp"
                    android:padding="20dp"
                    android:text="ঢাকা থেকে সড়ক পথে সরাসরি বান্দরবানে যাওয়া যায়। ঢাকার বিভিন্ন স্থান থেকে  ইউনিক, সেন্টমার্টিন, শ্যামলী, সৌদিয়া, এস আলম, বিআরটিসি ইত্যাদি পরিবহনের বাস রাত ১০:০০ টা বা সাড়ে ১১:০০ টার দিকে বান্দরবানের উদ্দেশ্য ছেড়ে যায়। এসব বাসে ভাড়া পড়বে জনপ্রতি ৬০০ - ১২০০ টাকা। এছাড়া সড়ক, রেল কিংবা আকাশ পথে বন্দরনগরী চট্টগ্রামে পৌঁছে সেখান থেকেও সহজেই যাওয়া যায় বান্দরবান। চট্টগ্রামের বহদ্দারহাট এলাকা থেকে পূরবী, পূর্বানী পরিবহনের বাস সকাল থেকে সন্ধ্যা পর্যন্ত চলাচল করে, ভাড়া জনপ্রতি ২২০ টাকা।\n\nএরপর বান্দরবান শহর থেকে নীলাচল যাওয়ার জন্য ভাড়ায় পাওয়া যায় অটো রিকশা, চাঁদের গাড়ি ও জিপ। অবস্থানের সময় অনুযায়ী নীলাচলে যাওয়া আসার জন্য অটো রিকশার ভাড়া পড়বে ৫০০- ১,০০০ টাকা। আর চাঁদের গাড়ি কিংবা জিপ গাড়ির ভাড়া পড়বে ১,২০০ - ৩,০০০ টাকা।"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />

                <Button

                    android:id="@+id/textView222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:linksClickable="true"
                    android:autoLink="web"
                    android:background="#F2F1F3"
                    android:text="অনলাইনে -\nট্রেনের টিকেট : www.esheba.cnsbd.com"
                    android:textColorLink="#7E90F0"
                    android:textColor="#0C0B0B"
                    android:textSize="16.5sp"
                    android:lineSpacingExtra="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="থাকবেন কোথায় :"
                    android:textColor="#0C0B0B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:lineSpacingExtra="6dp"
                    android:padding="20dp"
                    android:text="বান্দরবানে অসংখ্য রিসোর্ট, হোটেল ও রেস্টহাউজ রয়েছে। নীলাচল বান্দরবান শহরের কাছে বলেই আপনি বান্দরবন শহরের এসব হোটেল, রিসোর্টে থাকতে পারবেন। আর নীলাচলে থাকতে চাইলে নীলাচল স্কেপ রিসোর্টে থাকতে পারেন। এখানে তিনটি  কটেজে ছয়টি কক্ষ আছে। প্রতিটি কক্ষের ভাড়া ৩,০০০ টাকা। এছাড়া এখানকার জনপ্রিয় সব পর্যটন হোটেলের বিস্তারিত তথ্য জানতে আপনি আমাদের পর্যটন হোটেল ক্যাটাগরি চেক করতে পারেন।"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />

                <TextView

                    android:id="@+id/textView212"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="20dp"
                    android:text="ভ্রমণে ভোজন :"
                    android:textColor="#0C0B0B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView69"/>

                <TextView
                    android:id="@+id/textView5553"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    android:lineSpacingExtra="6dp"
                    android:padding="20dp"
                    android:text="নীলাচল স্কেপ রিসোর্ট তাদের অতিথিদের জন্য ভাল মানের খাবারের ব্যবস্থা করে থাকেন। এছাড়া নীলাচলে খাবারের তেমন ভাল ব্যবস্থা নাই। তাই খাবারের জন্য আপনাকে বান্দরবান শহরে যেতে হবে। এখানে খাবারের জন্য মেঘদূত ক্যাফে, তাজিংডং ক্যাফে, রূপসী বাংলা রেস্টুরেন্ট সহ বেশকিছু রেস্তোরা রয়েছে।"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp" />



                <TextView

                    android:id="@+id/textView22222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="20dp"
                    android:text="প্রয়োজনীয় তথ্য :"
                    android:textColor="#0C0B0B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView

                    android:id="@+id/textView5555"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#F2F1F3"
                    android:lineSpacingExtra="6dp"
                    android:padding="20dp"
                    android:text="নীলাচলে যেতে সড়কের টোল পরিশোধ করতে হয়। অটো রিকশা ৩০ টাকা, জিপ ৬০ টাকা। পর্যটন কমপ্লেক্সে জনপ্রতি প্রবেশ মূল্য ৩০ টাকা। পর্যটকরা সকাল থেকে সূর্যাস্ত পর্যন্ত নীলাচলে অবস্থান করতে পারবেন।"
                    android:textColor="#1F1C1C"
                    android:textSize="16.5sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView22222" />

                <TextView

                    android:id="@+id/textView2221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="20dp"
                    android:linksClickable="true"
                    android:autoLink="phone"
                    android:background="#D5D8EE"
                    android:text="এছাড়া যেকোন সমস্যায় ট্যুরিষ্ট পুলিশের সাহায্য নিন। ট্যুরিষ্ট পুলিশের হটলাইন নাম্বার - ০১৭৬৯৬৯৩০৩৭"
                    android:textColorLink="#2B49E7"
                    android:textColor="#413B3B"
                    android:textSize="16.5sp"
                    android:lineSpacingExtra="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5555" />




            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>